/**app.wxss**/
@import "/pages/font.wxss";
page{box-sizing: border-box;color: #333;}
/* 隐藏滚动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
button::after {
  border: none;
}
.hide{overflow: hidden !important}
.fyms image{width: 670rpx !important;}
.wxParse-img{background-color: #fff;width: 100% !important;}
.fixed{position: fixed !important;top: 0;left: 0;background: #fff;width: 100%;padding-left: 40rpx;z-index: 999}
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-size: 100% 100%;
	overflow: hidden;
  font-size: 28rpx;
  padding: 40rpx 40rpx 100rpx;
} 
.pt100{padding-top: 100rpx}
.inputTip{font-weight:400;color:#ccc;}
.h260{width: 100%;height:260rpx;}
.bottomT{text-align: center;width: 100%;color: #999;line-height: 80rpx;}
.hover{color: #ff6262}
.outer { zoom:1; } /*为了兼容性，因为ie6/7不能使用伪类，所以加上此行代码。*/
.outer:after { clear:both;content:'.';display:block;width:0;height:0;visibility:hidden; }
button{height: 80rpx;line-height: 80rpx;font-size: 32rpx;}
.hr10{height: 20rpx;width: 100%;background: #f5f5f7;}
.hr60{height: 120rpx;width: 100%;background: #f5f5f7;}
.h120{height: 120rpx;width: 100%;}
.h200{height: 200rpx;width: 100%;}
.line{height: 1rpx;width: 100%;background: #f5f5f7}
.noL{text-align: center;padding: 580rpx 0 0;height: 730rpx;box-sizing: border-box}
.noL image{width: 504rpx;height: 408rpx;display: block;margin: 0 auto 40rpx}
.noL text{font-size: 24rpx;color: #999;}
.gohome {
  box-sizing: border-box;
    padding-top: 60rpx;
    line-height: 1;
    font-size: 20rpx;
    color: #59a0f9;
    display: block;
    box-shadow: 0 3px 10px #e2e4ea;
    border-radius: 50%;
    bottom: 180rpx;
    height: 100rpx;
    right: 20rpx;
    text-align: center;
    width: 100rpx;
    position: fixed;
    z-index: 999;    
}

.top-b text {
  font-weight: bold
}


/* 小图标 */

.pd-b60{
  padding-bottom: 60rpx !important
}
.height160{height: 160rpx !important}
page{font-size:26rpx;color:#666;}
.flex{display:-webkit-flex;display: flex;width:100%;}

/*  底部悬浮导航  */
.fix_nav_wp{height:110rpx;position: fixed;left:0;bottom:0;background:#fff;border-top:1rpx solid #e5e5e5;z-index: 10}
.fix_nav_wp .nav_link{flex:1;}
.fix_nav_wp button{height:110rpx;display: flex;justify-content:space-between;align-items: center;padding:0;font-size:22rpx;
flex-direction: column;color:#999;position: relative;}
.fix_nav_wp .tip_tip{position: absolute;right:25rpx;top:5rpx;min-width:28rpx;line-height:32rpx;height: 32rpx;padding:0 8rpx;color:#fff;background:#f00;border-radius:50em;border:1rpx solid #fff;}
.fix_nav_wp .nav_link .iconfont{height:60rpx;font-size:46rpx;line-height: 80rpx;color: #c4c8cc;}
.fix_nav_wp .nav_link .plus_wp{width:100rpx;height:100rpx;margin-top: 0rpx;}
.fix_nav_wp .nav_link  image{width:100rpx;height:100rpx;}
.fix_nav_wp .nav_link .txt{height:50rpx;line-height:40rpx;color: #c4c8cc;}
.fix_nav_wp .nav_link.current .txt{color:#000;}
.fix_nav_wp .nav_link .del_ico{display: block;}
.fix_nav_wp .nav_link .cur_ico{display: none;}
.fix_nav_wp .nav_link.current .del_ico{display: none;}
.fix_nav_wp .nav_link.current .cur_ico{display: block;color:#000;}
.fix_nav_wp .nav_link .txt_fb{line-height: 18rpx}
.fix_nav_wp .nav_link .mp_ico{font-size: 50rpx;line-height: 80rpx}
.fix_nav_wp .nav_link .xiaox_ico{font-size: 64rpx;line-height: 70rpx;}
.fix_nav_wp .nav_link .my_ico{font-size: 56rpx;}
.fix_nav_wp .on_cor .del_ico, .fix_nav_wp .on_cor .txt{color: #000;}
/* 清楚按钮的默认样式  */
.defalut_btn{background: transparent;border:none;overflow: visible;padding-left:0;padding-right:0;margin-left:0;margin-right:0;
border-radius:0;}
.defalut_btn:after{display: none;}
