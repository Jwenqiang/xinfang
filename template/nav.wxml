<template name="nav">
      <view class="nav_link" bindtap="{{fn}}"  wx:if="{{style<2}}">
        <button class="defalut_btn {{current==0?'':'on_cor'}}">
          <block wx:if="{{style==0}}">
                <icon class="iconfont {{ico}} del_ico idx_ico"></icon>
                <text class="txt">{{name}}</text>
          </block>
          <block wx:if="{{style==1}}">
                <view class="plus_wp">
                  <image src='../../img/plus_ico.png' class="plus_ico" />
                </view>
                <text class="txt txt_fb">{{name}}</text>
          </block>
        </button> 
      </view>
</template>