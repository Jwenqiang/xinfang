.content{padding: 40rpx}
.area{width: 100%;height: 360rpx;border:1px solid #ededed; margin-bottom: 40rpx;border-radius: 20rpx;box-sizing: border-box;color: #000;text-align: center;font-weight: bold;position: relative}
.noMsg{margin-top: 140rpx}
.noMsg view{margin-top: 10rpx}
.yrz{position: absolute;width: 100%;height: 100%;left: 0;top: 0;box-sizing: border-box;padding-top: 120rpx;font-weight: 400;font-size: 28rpx;color: #5881fa;background: #f5f5f7;opacity: 0.8;border-radius: 20rpx}
.area image{width: 100%;height: 100%}
.msg{padding: 0 40rpx;box-sizing: border-box;font-size: 28rpx;border-bottom: 1px solid #ededed}
.msg label{width: 180rpx;display: inline-block;float: left;height: 100rpx;line-height: 100rpx;font-weight: bold}
.msg input{width: 470rpx;height: 100rpx;line-height: 100rpx;float: left;color: #333;font-weight: bold}
.btn{margin-top: 80rpx;width: 100%;padding: 40rpx;box-sizing: border-box}
.btn button{background: #ff8075;color: #fff}