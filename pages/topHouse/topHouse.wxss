/* 新样式 */
page{height: 100%;background: #50008d;}
.page{width: 100%;height: 100%; font-size: 28rpx;position: relative}
.ztTop{height: 300rpx;width: 100%;z-index: 9}
.ztTop image{width: 100%;height: 330rpx;z-index: 999}
.ztContent{ position: absolute;top: 330rpx;left: 0;padding: 0 35rpx;width: 100%;box-sizing: border-box;background: #50008d;z-index: 5}
.ztlist{position: relative; width: 680rpx;height: 420rpx;padding: 40rpx;box-sizing: border-box;margin-bottom: 50rpx;top: -60rpx;}
.aStatus{position: absolute;display: block; left: 20rpx;top: 34rpx;width:140rpx;text-align: center; background: #f16d62;color: #fff;font-size: 20rpx;border-radius: 6rpx;height: 46rpx;line-height: 46rpx;}
.ztlist image{width:100%;height: 300rpx}
.lbj{position: absolute;width: 680rpx;height: 420rpx;left: 0;top: 0;z-index: 7}
.lbj image{width: 680rpx;height: 420rpx;}
.thTop label,.thTop label image{width: 50rpx;height: 85rpx;float: left;margin-right: 30rpx;text-align: center;line-height: 54rpx;font-weight: bold;font-size: 38rpx;color: #72f6ff;}
.thTop label image{position: relative;top: -30rpx}
.thTop,.thBot{z-index: 8;position: relative;color: #fff}
.ztlist image.hmsg{width: 154rpx;height: 108rpx;float: left;margin-right: 20rpx;margin-top: 6rpx;border: 6rpx solid #fff;border-radius: 8rpx}
.bigT{font-size: 28rpx;font-weight: bold;margin-bottom: 20rpx;-webkit-line-clamp: 2;display: -webkit-box;overflow: hidden;text-overflow: ellipsis;-webkit-box-orient: vertical;line-height: 1.4}
.smallT{float: left;color: #c0b1f0;font-size: 24rpx;height: 34rpx;line-height: 34rpx}
.smallT text.price{font-size: 28rpx;color: #fff;font-weight: 600;width: 80rpx;height: 34rpx;display: inline-block;text-align: center;}
.smallT .label{margin-left: 20rpx;text-decoration: line-through;font-size: 24rpx;color: #c0b1f0;}
.thBot{margin-top: 20rpx;}
.maxT{font-size: 38rpx;font-weight: bold}
.maxT image{width: 70rpx;height: 56rpx}
.thBot .thbT{
  -webkit-line-clamp:3;
  display:-webkit-box;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  font-size: 24rpx
}

