page,.page{width: 100%;height: 100%;font-size: 28rpx;background: #fff;position: relative}
.ztTop{height: 300rpx;width: 100%;z-index: 9}
.ztTop image{width: 100%;height: 300rpx;}
.ztContent{padding: 0 40rpx;width: 100%;box-sizing: border-box}
.ztlist{position: relative; width: 100%;padding: 34rpx 0;box-sizing: border-box;border-radius: 5px;margin-bottom: 0rpx;border-bottom: 1px solid #f5f5f7}
.aStatus{
position:absolute;
display:block;
left:0rpx;
top:34rpx;
width:90rpx;
text-align:center;
background:#000;
color:#fff;
font-size:20rpx;
border-radius:6rpx;
height:40rpx;
line-height:40rpx;
border-top-right-radius:20rpx;
border-bottom-right-radius:20rpx;
border-bottom-left-radius:0rpx;
  
}
.ztlist image{width:100%;height: 360rpx;border-radius: 6rpx}
.bigH{font-size: 34rpx;color: #333;font-weight: bold;margin: 10rpx 0}
.smallH{font-size: 28rpx;color: #999;white-space: nowrap;overflow: hidden;text-overflow: ellipsis}

.xjDate {
  clear: both;
  margin-top: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
  width: 420rpx;
  float: left;
}

.xjDate text {
  background: #000;
  padding: 0 8rpx;
  color: #fff;
  margin: 0 6rpx;
  border-radius: 3px;
  font-size: 24rpx;
  font-weight: 400
}

.orderTime {
  margin-top: 30rpx;
}

.orderTime, .orderTime button {
  display: block;
  float: right;
  width:160rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:24rpx;
  background: #f16d62;
  border:0;
  color: #fff;
  border-radius: 30rpx;
}
.orderTime button.yes{background: #ccc}