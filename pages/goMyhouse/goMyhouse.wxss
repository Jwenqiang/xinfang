page{font-size: 28rpx;background: #f6f6f6}
.section{background: #fff;margin-bottom: 20rpx;position: relative}
.secStatus{padding: 0 40rpx;height: 100rpx;line-height: 100rpx;font-size: 28rpx;color: #999;border-bottom: 1px solid #f5f5f7}
.secStatus label{float: left;font-size: 24rpx}
.house{padding: 40rpx;box-sizing: border-box;}
.house image{width: 200rpx;height: 150rpx;float: left;margin-right: 40rpx;border-radius: 4rpx}
.hifMsg{position: relative}
.hifMsg text{
    display: block;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-weight: bold;
    font-size: 30rpx;
    color: #000
}
.house{border-bottom: 1px solid #f5f5f7;}
.hifT{margin-top: 20rpx;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;color: #999;font-size: 24rpx;}
.secB{height: 100rpx;line-height: 100rpx}
.secB label{display: inline-block;width: 33.3%;height: 60rpx;line-height: 60rpx;text-align: center;border-right: 1px solid #ededed;box-sizing: border-box}
.secB label:last-child{border: 0}
.blue{color: #6699ff}
.red{color: #fb4f3b}
.green{color: #33cccc}
.gray{color: #ccc}
.secF label{width: 50%}
.secD label{width: 25%}

.status{height: 100rpx;width: 100%;padding-left: 40rpx;white-space: nowrap; position: fixed;top: 0;left: 0; box-sizing: border-box;background: #fff;z-index: 999;border-bottom: 1px solid #f5f5f7}
.status label{width: 167.5rpx; display: inline-block;height: 100rpx;text-align: center;line-height: 100rpx;font-weight: bold;color: #999}
.status label.on{color: #000}
.allData{padding-top: 120rpx}
.ycj{position: absolute;right: 20rpx;top: 120rpx;width: 100rpx;height: 100rpx;display: none}
