@import "../font.wxss";
.page{width: 100%;font-size: 28rpx;padding-bottom: 160rpx}
.top{height: 160rpx;width: 100%}
.top-t{height: 40rpx;line-height: 40rpx;width: 100%;text-align: center;margin: 40rpx 0}
.top-t label,.top-t text{display: inline-block}
.top-t label{width: 40rpx;height: 40rpx;background: #999;line-height: 40rpx;text-align: center;border-radius: 50%;color: #fff;font-size: 24rpx}
.top-t text{width: 140rpx;height: 2rpx;background: #ccc;position: relative;top: -10rpx;margin: 0 2rpx}
.top-t label:first-child,.top-t text:nth-child(2),.top-t label:nth-child(3){background: #000}
.top-b{width: 100%;text-align: center}
.top-b text{margin-left: 84rpx;font-size: 24rpx;color: #999}
.top-b text:first-child{margin: 0;color: #000}
.top-b text:nth-child(2){color: #000}

.hInp{border-bottom: 1px solid #f5f5f7;padding: 20rpx 40rpx;font-size: 28rpx;position: relative}
.hInp text{display: inline-block;width: 180rpx;float: left;height: 60rpx;line-height: 60rpx;font-weight: bold}
.hInp input{height: 60rpx;line-height: 60rpx;width: 430rpx;float: left;text-align: right;font-size: 28rpx;color: #333;font-weight: bold}
.hInp text.iconfont{width: 40rpx;display: inline-block;float: right;color: #999;font-weight: 400;font-size: 24rpx;text-align: right}

.section{padding: 40rpx}
.hsque{margin: 40rpx 0 0}
.hsque text{display: inline-block;width: 200rpx;height: 60rpx;margin-left: 30rpx;background: #f3f5f7;text-align: center;line-height: 60rpx;border-radius: 3px;color: #999;font-size: 24rpx;font-weight: bold}
.zxqk text{width: 144rpx}
.hsque text:nth-of-type(4n+1){margin-left: 0}
.hsque text.on{background: #fe7269;color: #fff}

.btn{position: fixed;padding: 20rpx 40rpx 40rpx;background: #fff;bottom: 0;box-sizing: border-box;width: 100%;left: 0;box-shadow: 0 -2px 6px #f5f5f7;z-index: 9994}
.btn button{background: #ff8075;color: #fff}