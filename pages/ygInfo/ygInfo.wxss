.bigT{font-size: 28rpx;font-weight: bold;margin-bottom: 10rpx;}
.smallT text{font-size: 36rpx;color: #ff3141;font-weight: 600}
.smallT label{margin-left: 20rpx;text-decoration: line-through}
.maxT{margin: 40rpx 0 20rpx;font-size: 44rpx;font-weight: bold;clear: both;color: #999}
.mText{color: #333}
.ygFt{position: fixed;height: 100rpx;padding: 0 40rpx;background: #fff;left: 0;bottom: 0;width: 100%;box-sizing: border-box;border-radius: none;border: 0;z-index: 9;border-top: 1px solid #f5f5f7}
.yMsg button{margin-top: 60rpx;color: #4fbcdc}
.ygC{padding: 40rpx 0 0}
.xjDate {
  clear: both;
  margin-top: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
  width: 440rpx;
  float: left;
}

.xjDate text {
  background: #000;
  padding: 0 8rpx;
  color: #fff;
  margin: 0 6rpx;
  border-radius: 3px;
  font-size: 24rpx;
}

.orderTime {
  margin-top: 20rpx;
}

.orderTime{
  display: block;
  text-align: center;
  float: right;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border:none;
  background: #f16d62;
  color: #fff;
  border-radius: 30rpx;
}
.orderTime, .orderTime button {
  display: block;
  float: right;
  width:160rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:24rpx;
  background: #f16d62;
  border:0;
  color: #fff;
  border-radius: 30rpx;
}
.orderTime button.yes{background: #ccc}
.aStatus{
position:absolute;
display:block;
left:0rpx;
top:0rpx;
width:90rpx;
text-align:center;
background:#000;
color:#fff;
font-size:20rpx;
border-radius:6rpx;
height:40rpx;
line-height:40rpx;
border-top-right-radius:20rpx;
border-bottom-right-radius:20rpx;
border-bottom-left-radius:0rpx;
}
.lline{width: 8rpx;height: 30rpx;background: #ff0000;display: inline-block;float: left;margin-right: 10rpx;position: relative;top: 12rpx}