.page{font-size: 28rpx;}
.house{padding: 40rpx;box-sizing: border-box;}
.house image{width: 200rpx;height: 140rpx;float: left;margin-right: 40rpx;}
.hifMsg text{
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-weight: bold  
}
.hForm{padding: 40rpx;}
.hInp{margin-bottom: 40rpx;border-bottom: 1px solid #f5f5f7;padding: 10rpx 0;font-size: 28rpx;}
.hInp text{display: block;width: 150rpx;float: left;height: 60rpx;line-height: 60rpx;font-weight: bold}
.hInp input{height: 60rpx;line-height: 60rpx;width: 520rpx}
.hStatus{margin-top: 120rpx;}
.hStatus button{margin-bottom: 40rpx;}
.hStatus button:first-child{background: #6699ff;color: #fff}
.hStatus button:last-child{background: none;color: #999}
